<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="45dp"
        android:background="@drawable/loginbk">

        <TextView
            android:id="@+id/studentregTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Register New Student"
            android:textColor="#020000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtStudentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student ID"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Name"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtStudentSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Surname"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtStudentDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth"
            android:focusable="false"
            android:clickable="true"
            android:padding="8dp"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSubmitStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/orange"
            android:text="Submit Student" />

    </LinearLayout>
</ScrollView>

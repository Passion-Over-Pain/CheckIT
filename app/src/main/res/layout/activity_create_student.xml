<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/studentregTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register New Student"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtStudentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student ID"
            android:layout_below="@id/studentregTitle"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/edtStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Name"
            android:layout_below="@id/edtStudentID"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtStudentSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Surname"
            android:layout_below="@id/edtStudentName"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/edtStudentDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth (yyyy-MM-dd)"
            android:layout_below="@id/edtStudentSurname"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSubmitStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtStudentDOB"
            android:layout_marginTop="10dp"
            android:text="Submit" />

        <Button
            android:id="@+id/btnViewStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSubmitStudent"
            android:layout_marginTop="10dp"
            android:text="View Students" />
    </RelativeLayout>
</ScrollView>

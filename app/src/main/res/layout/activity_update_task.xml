<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="45dp"
        android:gravity="center_horizontal"
        android:background="@drawable/activitybk">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor Dashboard"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Task"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Task ID (non-editable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:src="@drawable/task" />

            <EditText
                android:id="@+id/edtUpdateTaskID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Task ID"
                android:enabled="false"
                android:textColor="@color/orange"
                android:textColorHint="#888888" />
        </LinearLayout>

        <!-- Task Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:src="@drawable/task" />

            <EditText
                android:id="@+id/edtUpdateTaskName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Task Name"
                android:inputType="text"
                android:textColor="@color/orange"
                android:textColorHint="#888888" />
        </LinearLayout>

        <!-- Due Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:src="@drawable/date" />

            <EditText
                android:id="@+id/edtUpdateTaskDueDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Due Date"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:textColor="@color/orange"
                android:textColorHint="#888888" />
        </LinearLayout>

        <!-- Module Spinner -->
        <Spinner
            android:id="@+id/spinnerUpdateTaskModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!-- Student Spinner -->
        <Spinner
            android:id="@+id/spinnerUpdateTaskStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <!-- Task Status Spinner -->
        <Spinner
            android:id="@+id/spinnerUpdateTaskStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />


        <!-- Update Task Button -->
        <Button
            android:id="@+id/btnUpdateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Task"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white" />

        <!-- Delete Task Button -->
        <Button
            android:id="@+id/btnDeleteTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Task"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>

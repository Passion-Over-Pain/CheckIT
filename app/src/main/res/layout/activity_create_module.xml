<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <EditText
        android:id="@+id/edtModuleID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Module ID"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtModuleName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Module Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtModuleDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Module Duration (e.g. 3 months)"
        android:inputType="text" />

    <Button
        android:id="@+id/btnSubmitModule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Module"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnViewModules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Modules"
        android:layout_marginTop="10dp" />

</LinearLayout>
